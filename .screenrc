encoding utf-8

# プレフィクスキーはCtrl-z
escape ^Zz

# 起動時のメッセージを表示しない
startup_message off

# ピープ音を鳴らさない
vbell off

# 突然screenが死んでもプロセスを残す
autodetach on

# keys
bind s
bind w windowlist -b

# スクロール可能な行数
defscrollback 10000

# 最終行にウィンドウ一覧を表示
hardstatus alwayslastline "%-w%{= ck}%n %t%{-}%+w"

# 256 colors
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
termcapinfo xterm* ti@:te@
